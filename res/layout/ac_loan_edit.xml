<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/head"
        android:name="br.com.eduardo.loan.ui.fragment.TitleFragment"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itemNameLabel" />

            <EditText
                android:id="@+id/itemNameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/itemNameLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friendNameLabel" />

            <EditText
                android:id="@+id/friendNameText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/friendNameLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ac_loan_status" >
            </TextView>

            <Spinner
                android:id="@+id/ac_loan_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_loan" />

            <DatePicker
                android:id="@+id/ac_loan_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/ac_loan_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" />

            <fragment
                android:id="@+id/action"
                android:name="br.com.eduardo.loan.ui.fragment.SaveCancelFragment_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>