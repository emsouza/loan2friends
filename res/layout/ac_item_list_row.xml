<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/row_bg" >

    <ImageView
        android:id="@+id/ac_item_list_image_type"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/photo_bg"
        android:contentDescription="@string/cd_item"
        android:drawingCacheQuality="high"
        android:src="@drawable/ic_type_default" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dip" >

        <TextView
            android:id="@+id/ac_item_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ac_item_list_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>