<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_bg" >

    <ImageView
        android:id="@+id/friendPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/photo_bg"
        android:contentDescription="@string/cd_contact_photo"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dip" >

        <TextView
            android:id="@+id/friendName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <br.com.eduardo.loan.group.TextViewGroup_
            android:id="@+id/friendNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>