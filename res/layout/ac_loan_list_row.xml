<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/row_bg"
    android:baselineAligned="false" >

    <ImageView
        android:id="@+id/friendIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/photo_bg"
        android:contentDescription="@string/cd_item"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_type_grid_cd" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dip" >

        <TextView
            android:id="@+id/loanTitle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textStyle="bold" />

        <br.com.eduardo.loan.ui.view.TextViewGroup_
            android:id="@+id/lentDate"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dip" >

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/cd_status"
            android:scaleType="centerInside"
            android:src="@drawable/ic_status_lent" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>