<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <CheckBox
        android:id="@+id/flg_lent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_lent" />

    <CheckBox
        android:id="@+id/flg_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_returned" />

    <CheckBox
        android:id="@+id/flg_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_achived" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dg_filter_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_update" />

        <Button
            android:id="@+id/dg_filter_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_cancel" />
    </LinearLayout>

</LinearLayout>